<MudIcon Class="fade-in-and-out" Icon="@Icon" Color="@Color" />
<MudText Class="fade-in-and-out" Typo="Typo.overline">@Message</MudText>

@code {
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public Color Color { get; set; }
    [Parameter]
    public string Icon { get; set; }
}
