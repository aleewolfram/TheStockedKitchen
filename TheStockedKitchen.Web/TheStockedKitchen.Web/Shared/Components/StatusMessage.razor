<MudIcon Class="@ClassName" Icon="@Icon" Color="@Color" />
<MudText Class="@ClassName" Typo="Typo.overline">@Message</MudText>

@code {
    [Parameter]
    public string ClassName { get; set; }
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public Color Color { get; set; }
    [Parameter]
    public string Icon { get; set; }
}
