@using TheStockedKitchen.Client;
@using TheStockedKitchen.Web.Shared.Components;

@inject ITheStockedKitchenClient _apiClient

<MudDialog >
    <DialogContent>
        <MudGrid>
            <FoodItemInput @bind-FoodStockVM="@FoodStockVM" />
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="UpdateFoodItemAsync">Update</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public FoodStockVM FoodStockVM { get; set; }

    private async void UpdateFoodItemAsync()
    {
        MudDialog.Close(DialogResult.Ok(FoodStockVM));
    }

    private void Cancel() => MudDialog.Cancel();
}
